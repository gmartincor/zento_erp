# =============================================================================
# render.yaml.template - Configuración de servicios para Render (TEMPLATE)
# =============================================================================
# INSTRUCCIONES:
# 1. Copia este archivo a render.yaml
# 2. Reemplaza [NOMBRE_SERVICIO_DB] con el nombre real de tu servicio PostgreSQL
# 3. NO versionas render.yaml en Git (está en .gitignore)
# 4. USA REFERENCIAS SEGURAS - No hardcodees credenciales

services:
  # ---------------------------------------------------------------------------
  # Web Service Principal - Django Multi-tenant
  # ---------------------------------------------------------------------------
  - type: web
    name: zentoerp-web
    env: docker
    dockerfilePath: ./Dockerfile
    dockerContext: .
    plan: starter
    region: oregon
    branch: production
    
    # Comandos Docker
    buildCommand: ./scripts/render-deploy.sh
    startCommand: gunicorn --bind 0.0.0.0:$PORT --workers 3 --worker-class sync --max-requests 1000 --max-requests-jitter 100 --timeout 30 --keep-alive 2 --log-level info --access-logfile - --error-logfile - config.wsgi:application
    preDeployCommand: python manage.py migrate && python manage.py collectstatic --noinput && python manage.py createcachetable
    healthCheckPath: /health/
    autoDeploy: true
    
    # Configuración de dominio y subdominios
    domains:
      - zentoerp.com
      - "*.zentoerp.com"
    
    # Variables de entorno para producción
    envVars:
      - key: DJANGO_SETTINGS_MODULE
        value: config.settings.production
      - key: ENVIRONMENT
        value: production
      - key: DEBUG
        value: "False"
      - key: LOAD_TEST_DATA
        value: "False"
      
      # Dominio principal
      - key: ALLOWED_HOSTS
        value: "zentoerp.com,*.zentoerp.com,zentoerp-web.onrender.com"
      
      # Security - Auto-generate secure key (RECOMENDADO)
      - key: SECRET_KEY
        generateValue: true
      # Alternativa manual: value: "[GENERAR_SECRET_KEY_NUEVA_MUY_LARGA]"
      
      # Database - MÉTODO SEGURO: Referencias al servicio PostgreSQL
      # REEMPLAZA [NOMBRE_SERVICIO_DB] con el nombre de tu servicio PostgreSQL en Render
      - key: DATABASE_URL
        fromDatabase:
          name: [NOMBRE_SERVICIO_DB]
          property: connectionString
      - key: DB_NAME
        fromDatabase:
          name: [NOMBRE_SERVICIO_DB]
          property: database
      - key: DB_USER
        fromDatabase:
          name: [NOMBRE_SERVICIO_DB]
          property: user
      - key: DB_PASSWORD
        fromDatabase:
          name: [NOMBRE_SERVICIO_DB]
          property: password
      - key: DB_HOST
        fromDatabase:
          name: [NOMBRE_SERVICIO_DB]
          property: host
      - key: DB_PORT
        value: "5432"
      
      # Cache configuration (sin Redis)
      - key: CACHE_BACKEND
        value: "database"
      
      # Configuración de archivos estáticos
      - key: STATIC_URL
        value: "/static/"
      - key: MEDIA_URL
        value: "/media/"
      - key: STATIC_ROOT
        value: /app/static_collected
      - key: MEDIA_ROOT
        value: /app/media
      
      # Multi-tenant configuration
      - key: TENANT_MODEL
        value: "tenants.Client"
      - key: TENANT_DOMAIN_MODEL
        value: "tenants.Domain"
      
      # Logging
      - key: LOG_FILE
        value: /tmp/django.log
      
      # Email (configurar según proveedor)
      - key: EMAIL_HOST
        value: smtp.gmail.com
      - key: EMAIL_PORT
        value: "587"
      - key: EMAIL_USE_TLS
        value: "True"
      - key: DEFAULT_FROM_EMAIL
        value: noreply@zentoerp.com
