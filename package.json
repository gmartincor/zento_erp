  "bugs": {
    "url": "https://github.com/gmartincor/zento_erp/issues"
  },
  "homepage": "https://github.com/gmartincor/zento_erp#readme",
  "dependencies": {
    "chart.js": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
